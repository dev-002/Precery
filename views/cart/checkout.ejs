<!DOCTYPE html>

<html>

<head>

  <meta http-equiv="contact-type" content="text/html; charset-utf-8" />
  <meta name="viewport" content="width-device-width,initial-scale=1,mininmum-scale=1,maximum-scale=1,user-scalable=no">

  <title>
    Details for Delivery
  </title>

  <link href="/styles/checkout.css" rel="stylesheet" type="text/css" />
  <script src="/scripts/checkout.js"></script>

</head>

<body>

  <div class="contact-in">
    <div class="contact-map">
      <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d224345.83923192866!2d77.06889754725779!3d28.52758200617606!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x390cfd5b347eb62d%3A0x52c2b7494e204dce!2sNew%20Delhi%2C%20Delhi!5e0!3m2!1sen!2sin!4v1642929688022!5m2!1sen!2sin" width="100%" height="auto" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
    </div>

    <div class="contact-form">
      <h1 style='align-self: center'>
        Details For Delivery
      </h1>

      <div id="error_message"></div>

      <form action="/cart/checkout/payment" method="post" class='address_form' id="paymentForm">
        <input type="text" placeholder="Name" class="contact-form-txt" id='name' required name="payment[name]" />
        <input type="text" placeholder="Address" class="contact-form-txt" id='address' required name="payment[address]" />
        <input type="text" placeholder="Email-ID" class="contact-form-txt" id='email' required name="payment[email]" />
        <input type="text" placeholder="Locality/Apartment" class="contact-form-txt" required name="payment[locality]" />
        <input type="number" placeholder="Pincode" class="contact-form-txt" id='pincode' required name="payment[pincode]" />
        <input type="number" placeholder="Contact No." class="contact-form-txt" id='phone' required name="payment[contact]" />
        <input type="date" placeholder="Date (Format: dd/mm/yyyy)" class="contact-form-txt" id='date' required name="payment[date]" />
        <button type="submit" class="contact-form-btn" id='submit' style="cursor: pointer; text-decoration: none; color: white;">
          Submit
        </button>
      </form>

    </div>

  </div>
<script>
  const form = document.getElementById("paymentForm");
form.addEventListener("submit", validate_form);
</script>
</body>

</html>